@page
@model CustomersModel
@{
    ViewData["Title"] = "Customers";
}

<div class="container-sm">

    <h1>This is a list of Customers</h1>    

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th class="th-sm" scope="col">Id</th>
            <th class="th-sm" scope="col">Name</th>
            <th class="th-sm" scope="col">Company</th>
            <th class="th-sm" scope="col">Address</th>
            <th class="th-sm" scope="col">City</th>
            <th class="th-sm" scope="col">Phone</th>            
        </tr>
        </thead>
         
        <tbody>
        @foreach(var customer in @Model.Customers) {
            <tr>
                <th scope="row">@customer.Id</th>
                <td>@customer.Name</td>
                <td>@(customer.Company ?? "-")</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td>@customer.Phone</td>
            </tr>
        }
        </tbody>  
    </table>
</div>